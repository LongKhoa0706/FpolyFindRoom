<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/card_profile"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/capturedImageSmall"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:src="@drawable/splash" />
        <TextView
            android:id="@+id/txtProfile"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Long Khoa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <LinearLayout
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:background="@drawable/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#FF9800"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Thông tin cá nhân"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="1dp"
                    android:src="@drawable/outline_email_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>

                <TextView
                    android:id="@+id/txtEmailProfile"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"
                    android:text="longkhoa@gmail.com"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content">
                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView

                    android:layout_marginTop="1dp"
                    android:src="@drawable/outline_phone_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>

                <TextView
                    android:id="@+id/txtPhoneProfile"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"
                    android:text="090293123"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content">
                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="1dp"
                    android:src="@drawable/outline_date_range_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>

                <TextView
                    android:id="@+id/txtCreateAt"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"

                    android:layout_width="320dp"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout

            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_marginTop="1dp"
                android:src="@drawable/baseline_power_settings_new_black_18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:id="@+id/txt_signout"
                android:textColor="#000"
                android:layout_marginLeft="5dp"
                android:text="Đăng xuất"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>



        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_marginTop="1dp"
                android:src="@drawable/outline_settings_black_18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:id="@+id/txt_update"
                android:textColor="#000"
                android:layout_marginLeft="5dp"
                android:text="Thay đổi thông tin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_own"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/bottron_button"
            android:textSize="16sp"
            />
    </LinearLayout>

</LinearLayout>