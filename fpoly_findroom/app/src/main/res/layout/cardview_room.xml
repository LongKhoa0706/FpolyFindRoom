<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="131dp">

        <ImageView
            android:id="@+id/image_room"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_marginTop="-28dp"
            android:layout_weight="3"></ImageView>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/favorite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/outline_favorite_border_white_24dp"></ImageView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_room"
        android:layout_width="178dp"
        android:layout_height="129dp"
        android:layout_marginLeft="200dp">

        <ImageView
            android:id="@+id/image_room1"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_marginTop="-28dp"
            android:layout_weight="3"></ImageView>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/favorite1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/outline_favorite_border_white_24dp"></ImageView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_loai"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="69dp"
        android:text="CĂN HỘ CHUNG CƯ"
        android:textColor="#676060"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_loai1"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="70dp"
        android:text="CĂN HỘ CHUNG CƯ"
        android:textColor="#676060"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="175dp"
        android:layout_height="29dp"
        android:layout_alignBottom="@+id/txt_loai"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="-32dp"
        android:text="San's Home"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_title1"
        android:layout_width="175dp"
        android:layout_height="29dp"
        android:layout_alignBottom="@+id/txt_loai"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="6dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="-30dp"
        android:text="San's Home"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="175dp"
        android:layout_height="29dp"
        android:layout_alignBottom="@+id/txt_title"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="-33dp"
        android:text="400,000đ"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_price1"
        android:layout_width="175dp"
        android:layout_height="29dp"
        android:layout_alignBottom="@+id/txt_title"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="-31dp"
        android:text="400,000đ"
        android:textSize="18dp"
        android:textStyle="bold" />

</RelativeLayout>
