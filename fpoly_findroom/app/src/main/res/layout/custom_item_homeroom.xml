<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:layout_height="wrap_content"
    android:layout_width="230dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/cardViewItem"
    android:layout_marginRight="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgHomeRoom"
                android:scaleType="centerCrop"
                android:src="@drawable/splash"
                android:layout_width="wrap_content"
                android:layout_height="130dp">

            </ImageView>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_radius"
                android:layout_marginBottom="10dp"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgIconHomeRoom"
                    android:src="@drawable/baseline_home_white_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/txtCategoriesHome"
                    android:textSize="13dp"
                    android:text="Nhà"
                    android:textStyle="bold"
                    android:textColor="#eeeeee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>


            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTitleHomeRoom"
                android:maxLines="2"
                android:textSize="16dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:text="Phòng trọ cho thuê giá rẻ"
                android:fontFamily="@font/gothammedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/txtPriceHomeRoom"
                android:textColor="#f00"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:text="1,000,000đ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/txtAddressHomeRoom"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/outline_location_on_black_18dp"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:text="43/12 Trần Quang Diệu Phường 14, Quận 3. TP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

    </LinearLayout>



</com.google.android.material.card.MaterialCardView>