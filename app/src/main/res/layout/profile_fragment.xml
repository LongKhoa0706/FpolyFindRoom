<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/card_profile"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="120dp"

            />
        <ImageView
            android:id="@+id/img_camera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/outline_camera_enhance_black_18dp"
            android:layout_gravity="right"
            android:layout_marginRight="150dp"
            android:layout_marginTop="-20dp"/>
        <TextView
            android:id="@+id/txt_name"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Long Khoa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <LinearLayout
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:background="@drawable/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#FF9800"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Thông tin cá nhân"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="1dp"
                    android:src="@drawable/outline_email_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>

                <TextView
                    android:id="@+id/txt_email"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"
                    android:text="longkhoa@gmail.com"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:id="@+id/img_alert"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/outline_email_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView

                    android:layout_marginTop="1dp"
                    android:src="@drawable/outline_phone_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>

                <TextView
                    android:id="@+id/txt_phone"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"
                    android:text="090293123"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="1dp"
                    android:src="@drawable/outline_date_range_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>

                <TextView
                    android:id="@+id/txt_date"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"
                    android:text="12-11-1020"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <ImageView
                    android:id="@+id/img_alert1"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/outline_email_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_marginTop="1dp"
                android:src="@drawable/outline_email_black_18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:id="@+id/txt_signout"
                android:textColor="#000"
                android:layout_marginLeft="5dp"
                android:text="Đăng xuất"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>



        </LinearLayout>
        <TextView
            android:id="@+id/txt_update"
            android:textColor="#000"
            android:layout_marginLeft="5dp"
            android:text="Thay đổi thông tin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>

</LinearLayout>