<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <com.synnapps.carouselview.CarouselView
               android:id="@+id/carouselView"
               android:layout_width="match_parent"
               android:layout_height="320dp"
               app:fillColor="#FFFFFFFF"
               app:pageColor="#00000000"
               app:autoPlay="false"
               app:slideInterval="3000"
               app:strokeColor="#FF777777"
               app:strokeWidth="1dp"/>

           <LinearLayout
               android:paddingRight="10dp"
               android:paddingLeft="10dp"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <LinearLayout
                   android:layout_marginTop="10dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:id="@+id/imgIconDetailRoom"
                       android:src="@drawable/iconpremium"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                   </ImageView>

                   <TextView
                       android:id="@+id/txtTypeDetailRoom"
                       android:layout_marginLeft="10dp"
                       android:textColor="#FF9800"
                       android:layout_marginTop="3dp"
                       android:text="Căn hộ"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                   </TextView>

               </LinearLayout>

               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <TextView
                       android:id="@+id/txtTitleDetailRoom"
                       android:layout_weight="1"
                       android:layout_marginTop="5dp"
                       android:textColor="#000"
                       android:textStyle="bold"
                       android:text="Phòng trọ đẹp "
                       android:textSize="23dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                   </TextView>

                   <TextView
                       android:id="@+id/txtPriceDetailRoom"
                       android:fontFamily="@font/gothammedium"
                       android:layout_marginTop="5dp"
                       android:textColor="#ff00"
                       android:textStyle="bold"
                       android:text="132,000d"
                       android:textSize="20dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                   </TextView>

               </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:background="@drawable/baseline_access_time_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </ImageView>
                    <TextView
                        android:id="@+id/txtDateDetailRoom"
                        android:layout_marginLeft="5dp"
                        android:textSize="12dp"
                        android:layout_marginTop="4dp"
                        android:text="13/10/2010 - 12:12AM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                    </TextView>
                </LinearLayout>
               <View

                   android:layout_marginTop="10dp"
                   android:background="#ccc"
                   android:layout_width="match_parent"
                   android:layout_height="1dp">

               </View>

               <TextView
                   android:layout_marginTop="15dp"
                   android:text="Mô tả"
                   android:textStyle="bold"
                   android:textColor="#000"
                   android:textSize="18dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

               </TextView>

               <TextView
                   android:id="@+id/txtDescDetailRoom"
                   android:layout_marginTop="10dp"
                   android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum"
                   android:textColor="#ccc"
                   android:textSize="15dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
               </TextView>

               <TextView
                   android:layout_marginTop="15dp"
                   android:text="Vị trí"
                   android:textStyle="bold"
                   android:textColor="#000"
                   android:textSize="18dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
               </TextView>

               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_marginTop="8dp"
                       android:background="@drawable/outline_location_on_yellow_100_24dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">

                   </ImageView>

                   <TextView
                       android:id="@+id/txtLocationDetailRoom"
                       android:layout_marginTop="5dp"
                       android:layout_marginLeft="8dp"
                       android:text="41-43 Đ. Đinh Tiên Hoàng, Bến Nghé, Quận 1, Thành phố Hồ Chí Minh, Việt Nam"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                   </TextView>



               </LinearLayout>

               <com.mapbox.mapboxsdk.maps.MapView
                   android:layout_marginTop="5dp"
                   android:id="@+id/mapBoxDetailFragment"
                   android:layout_width="match_parent"
                   android:layout_height="230dp" />

               <TextView
                   android:layout_marginTop="15dp"
                   android:text="Tiện ích"
                   android:textStyle="bold"
                   android:textColor="#000"
                   android:textSize="18dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
               </TextView>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <androidx.recyclerview.widget.RecyclerView
                       android:id="@+id/reyclerViewUtilDetailRoom"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_horizontal"
                        />
               </LinearLayout>

<!--               <androidx.recyclerview.widget.RecyclerView-->
<!--                   android:id="@+id/reyclerViewUtilDetailRoom"-->
<!--                   android:layout_width="match_parent"-->
<!--                   -->
<!--                   android:layout_gravity="center"-->
<!--                   android:layout_height="wrap_content">-->

<!--               </androidx.recyclerview.widget.RecyclerView>-->


               <TextView
                   android:layout_marginTop="15dp"
                   android:text="Liên hệ "
                   android:textStyle="bold"
                   android:textColor="#000"
                   android:textSize="18dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
               </TextView>

               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <de.hdodenhof.circleimageview.CircleImageView
                       android:id="@+id/imgAuthorDetailRoom"
                       android:layout_marginTop="8dp"
                       android:layout_width="45dp"
                       android:layout_height="45dp"
                       android:src="@drawable/splash"
                       />

                   <LinearLayout
                       android:orientation="vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">

                       <TextView
                           android:id="@+id/txtAuthorDetailRoom"
                           android:layout_marginLeft="10dp"
                           android:layout_marginTop="10dp"
                           android:text="Long Khoa"
                           android:textStyle="bold"
                           android:textColor="#000"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content">

                       </TextView>
                       <TextView
                           android:layout_marginLeft="10dp"
                           android:textSize="13dp"
                           android:id="@+id/txtPhoneDetailRoom"
                           android:textColor="#ccc"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content">

                       </TextView>

                   </LinearLayout>

               </LinearLayout>

           </LinearLayout>

       </LinearLayout>
   </ScrollView>

</LinearLayout>
