<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="20dp"
    android:elevation="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/splash"
            android:id="@+id/image_favorite"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="3">

        </ImageView>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="90dp"
            android:text="Olenji Homestay - Autumn Room - Tạm Thương"
            android:textSize="18dp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/image_icon"
            android:src="@drawable/ic_baseline_location_on_24"
            android:layout_alignBottom="@id/txt_title"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="-35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/favorite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/white_ripple">

            </ImageView>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image_icon"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="190dp"
            android:layout_marginBottom="2dp"
            android:text="Quận 5, Hồ Chí Minh" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-35dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:text="550,000đ"
            android:layout_alignBottom="@id/txt_district"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>